@model NgTrade.Models.ViewModel.ReferViewModel

@{
    ViewBag.Title = "Nigerian Stock Exchange Trading Online NSE Daily Price List - NgTradeOnline Refer friend";
}

<div class="content">
    <div class="container">
        <div class="row">
            <div class="span6 offset3">
                <ul class="nav nav-tabs">
                    <li><a href="@Url.Action("Index", "Account")">Personal Info</a></li>
                    <li class="active"><a href="@Url.Action("Refer", "Account")">Refer a friend</a></li>
                    <li><a href="@Url.Action("Portfolio", "Account")">Portfolio</a></li>
                    <li><a href="@Url.Action("Trade", "Account")">Trade</a></li>
                </ul>
                <h4 class="widget-header"><i class="icon-lock"></i>Refer your friend</h4>
                <div class="widget-body">
                    <div class="center-align">
                        @using (Html.BeginForm("Refer", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-contact-us" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

       
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, new { @placeholder = "Name" })
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
                            <div class="clearfix"></div>
                            <input type="submit" class="btn btn-success btn-large" value="Send Invite">
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
