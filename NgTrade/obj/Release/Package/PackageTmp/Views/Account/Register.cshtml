@model NgTrade.Models.RegisterModel
@{
  ViewBag.Title = "Nigerian Stock Exchange Trading Online NSE Daily Price List - NgTradeOnline Open Account";
}

<div class="content">
  <div class="container">
    <div class="row">
      <div class="span6 offset3">
        <h4 class="widget-header"><i class="icon-lock"></i> Signup for NgTradeOnline</h4>
        <div class="widget-body">
          <div class="center-align">
            @using (Html.BeginForm("Register", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal form-signin-signup" }))
            {
              @Html.AntiForgeryToken()
              @Html.ValidationSummary()

              @Html.LabelFor(m => m.UserName)
              @Html.TextBoxFor(m => m.UserName, new { @placeholder = "User name", @required = "true" })
              @Html.LabelFor(m => m.Password)
              @Html.PasswordFor(m => m.Password, new { @class = "Password", @required = "true"})
                @Html.LabelFor(m => m.ConfirmPassword)
              @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "Password", @required = "true"})
               @Html.LabelFor(m => m.Email)
              @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @required = "true" })
               @Html.LabelFor(m => m.FirstName)
              @Html.TextBoxFor(m => m.FirstName, new { @placeholder = "First name", @required = "true" })
               @Html.LabelFor(m => m.LastName)
              @Html.TextBoxFor(m => m.LastName, new { @placeholder = "Last name", @required = "true" })
               @Html.LabelFor(m => m.Address1)
              @Html.TextBoxFor(m => m.Address1, new { @placeholder = "Address1", @required = "true" })
               @Html.LabelFor(m => m.Address2)
              @Html.TextBoxFor(m => m.Address2, new { @placeholder = "Address2" })
               @Html.LabelFor(m => m.City)
              @Html.TextBoxFor(m => m.City, new { @placeholder = "City", @required = "true" })
               @Html.LabelFor(m => m.State)
              @Html.TextBoxFor(m => m.State, new { @placeholder = "State", @required = "true" })
               @Html.LabelFor(m => m.Country)
              @Html.TextBoxFor(m => m.Country, new { @placeholder = "Country", @required = "true" })
               @Html.LabelFor(m => m.Phone1)
              @Html.TextBoxFor(m => m.Phone1, new { @placeholder = "Phone1", @required = "true" })
              <div class="clearfix"></div>
              <input type="submit" value="Register" class="btn btn-success btn-large">
            }
            <h4><i class="icon-thumbs-up"></i> Sign up with:</h4>
            @Html.Action("ExternalLoginsList", new { ViewBag.ReturnUrl })

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}