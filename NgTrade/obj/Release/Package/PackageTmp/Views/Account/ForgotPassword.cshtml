@model NgTrade.Models.ViewModel.ForgotPasswordViewModel

@{
  ViewBag.Title = "Nigerian Stock Exchange Trading Online NSE Daily Price List - NgTradeOnline Forgot Password";
}

<div class="content">
  <div class="container">
    <div class="page-header">
      <h2>Forgot your password?</h2>
    </div>
    <div class="row-fluid">
      <div class="span4 offset1">
         @using (Html.BeginForm("ForgotPassword", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-contact-us" }))
            {
          <div class="control-group">
              <div class="controls">
                  @Html.AntiForgeryToken()
                  @Html.LabelFor(m => m.UserName)
                  @Html.TextBoxFor(m => m.UserName, new { @placeholder = "User name", @required = "true" })
                  <span style="color:red;">@TempData["ErrorMessage"]</span>
                   <span style="color:green;">@TempData["SuccessMessage"]</span>
              </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <input type="submit" class="btn btn-success btn-large" value="Request password">
            </div>
          </div>
        }
      </div>
    </div>
  </div>
</div>
    <!-- End: MAIN CONTENT -->