@model NgTrade.Models.ViewModel.ResetPasswordViewModel

@{
  ViewBag.Title = "Nigerian Stock Exchange Trading Online NSE Daily Price List - NgTradeOnline Forgot Password";
}

<div class="content">
  <div class="container">
    <div class="page-header">
      <h2>Forgot your password?</h2>
    </div>
    <div class="row-fluid">
      <div class="span4 offset1">
         @using (Html.BeginForm("ResetPassword", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-contact-us" }))
            {
          <div class="control-group">
            <div class="controls">
              @Html.AntiForgeryToken()
              @Html.LabelFor(m => m.Password)
              @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @required = "true" })
              @Html.LabelFor(m => m.ConfirmPassword)
              @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm password", @required = "true" })
            
                @Html.HiddenFor(m => m.Token)
                <span>@TempData["Message"]</span>
            </div>
          </div>
          <div class="control-group">
            <div class="controls">
              <input type="submit" class="btn btn-success btn-large" value="Reset password">
            </div>
          </div>
        }
      </div>
    </div>
  </div>
</div>
    <!-- End: MAIN CONTENT -->